name:                deka
version:             0.6.0.0
synopsis:            Decimal floating point arithmetic

description:
  deka provides decimal floating point arithmetic.  It
  is based on the decNumber C library, which is available
  at
  .
  <http://speleotrove.com/decimal/decnumber.html>
  .
  decNumber, in turn, implements the General Decimal Arithmetic
  Specification, which is available at
  .
  <http://speleotrove.com/decimal/>
  .
  For more on deka, please see the Github home page at
  .
  <https://github.com/massysett/deka>

homepage:            http://www.github.com/massysett/deka
license:             BSD3
license-file:        LICENSE
author:              Omari Norman
maintainer:          omari@smileystation.com
copyright:           2014 Omari Norman
category:            Math
build-type:          Configure
extra-source-files:  README.md ChangeLog
  current-versions.txt minimum-versions.txt
  configure
  decnumber/src/decNumberLocal.h.in
  decnumber/src/decCommon.c
  decnumber/src/decBasic.c
  decnumber/src/decContext.h
  decnumber/src/decContext.c
  decnumber/src/decSingle.h
  decnumber/src/decSingle.c
  decnumber/src/decQuad.h
  decnumber/src/decQuad.c
  decnumber/src/decDPD.h
  decnumber/src/decNumber.c
  decnumber/src/decimal32.c
  decnumber/src/decimal32.h
  decnumber/src/decimal64.c
  decnumber/src/decimal64.h
cabal-version:       >=1.10
tested-with: GHC==7.4.1 GHC==7.6.3, GHC ==7.8.2

library
  hs-source-dirs: lib
  
  exposed-modules:     
      Deka
    , Deka.Class
    , Deka.Context
    , Deka.DecNum
    , Deka.Decoded
    , Deka.Docs
    , Deka.Docs.Examples
    , Deka.Fixed
    , Deka.Fixed.Single
    , Deka.Fixed.Double
    , Deka.Fixed.Quad

  other-modules:
      Deka.Internal
    , Deka.Internal.Class
    , Deka.Internal.Context
    , Deka.Internal.DecNum.CtxFree
    , Deka.Internal.DecNum.Ctx
    , Deka.Internal.DecNum.DecNum
    , Deka.Internal.DecNum.Util
    , Deka.Internal.Decnumber.Context
    , Deka.Internal.Decnumber.Decimal32
    , Deka.Internal.Decnumber.Decimal64
    , Deka.Internal.Decnumber.Decimal128
    , Deka.Internal.Decnumber.DecNumber
    , Deka.Internal.Decnumber.DecNumberLocal
    , Deka.Internal.Decnumber.DecDouble
    , Deka.Internal.Decnumber.DecSingle
    , Deka.Internal.Decnumber.DecQuad
    , Deka.Internal.Single.CtxFree
    , Deka.Internal.Single.Ctx
    , Deka.Internal.Single.Decoding
    , Deka.Internal.Single.Single
    , Deka.Internal.Double.CtxFree
    , Deka.Internal.Double.Ctx
    , Deka.Internal.Double.Decoding
    , Deka.Internal.Double.Double
    , Deka.Internal.Quad.CtxFree
    , Deka.Internal.Quad.Ctx
    , Deka.Internal.Quad.Decoding
    , Deka.Internal.Quad.Quad
    , Deka.Internal.Unsafe

  build-depends:
      base >=4.5.0.0 && < 4.8
    , bytestring >=0.9.2.1 && < 0.11

  ghc-options: -Wall
  default-language:    Haskell2010

  cc-options: -fPIC
  c-sources:
    decnumber/src/decDouble.c
    decnumber/src/decSingle.c
    decnumber/src/decQuad.c
    decnumber/src/decContext.c
    decnumber/src/decNumber.c
    decnumber/src/decimal64.c
    decnumber/src/decNumberMacros.c
    decnumber/src/decimal128.c
    decnumber/src/decimal32.c
  include-dirs:
    decnumber/src
       

-- The test suite does not have deka listed in the build-depends.
-- This lengthens the compilation times but it allows the test suite
-- to have access to Data.Deka.Internal, which is critical for
-- testing.

Test-Suite tasty-test
  Build-depends:
      base >=4.5.0.0 && < 4.8
    , tasty-quickcheck >=0.3.1 && < 0.9
    , tasty >=0.7 && < 0.9
    , QuickCheck >=2.7 && < 2.8
    , bytestring >=0.9.2.1 && < 0.11
    , random-shuffle ==0.0.4
    , unix >= 2.5.1.0 && < 2.8
    , transformers >= 0.3.0.0 && < 0.4.0.0

  type: exitcode-stdio-1.0
  hs-source-dirs: tests lib
  ghc-options: -Wall -rtsopts -fprof-auto
  main-is: tasty-test.hs
  other-modules:
      Deka.Internal.Decnumber.DecSingle
    , Deka.Internal.Decnumber.DecQuad
    , Deka.Internal.Decnumber.DecDouble
    , Deka.Internal.Decnumber.Context
    , Deka.Internal.Decnumber.DecNumber
    , Deka.Internal.Decnumber.DecNumberLocal
    , Deka.Internal.Decnumber.Decimal32
    , Deka.Internal.Decnumber.Decimal64
    , Deka.Internal.Decnumber.Decimal128

  default-language:    Haskell2010

  c-sources:
    decnumber/src/decSingle.c
    decnumber/src/decQuad.c
    decnumber/src/decDouble.c
    decnumber/src/decContext.c
    decnumber/src/decimal32.c
    decnumber/src/decimal64.c
    decnumber/src/decimal128.c
    decnumber/src/decNumber.c
    decnumber/src/decNumberMacros.c
  include-dirs:
    decnumber/src


Flag testexe
  Description: build test executables
  Default: False

Executable parseTestFile
  Build-depends:
      base >= 4.5.0.0 && < 4.8
    , bytestring >= 0.9.2.1 && < 0.11
  hs-source-dirs: tests
  main-is: testParse.hs
  default-language: Haskell2010
  if ! flag(testexe)
    buildable: False

