category:            Math

build-type:          Simple

-- Extra files to be distributed with the package, such as examples or a 
-- README.
-- extra-source-files:  

-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.10

library
  hs-source-dirs: lib
  extra-libraries: decnumber
  
  exposed-modules:     
      Data.Deka
    , Data.Deka.Decnumber
    , Data.Deka.IO
    , Data.Deka.Pure
    , Data.Deka.Examples
  
  build-depends:
      base >=4.6 && <4.7
    , bytestring ==0.10.*
    , transformers ==0.3.*
    , either ==4.1.*
    , bindings-DSL ==1.0.*

  ghc-options: -Wall
  default-language:    Haskell2010

Test-Suite tasty-test
  Build-depends:
      base ==4.6.*
    , deka
    , tasty-quickcheck ==0.3.*
    , tasty ==0.7.*
    , QuickCheck ==2.6.*
    , bytestring ==0.10.*

  type: exitcode-stdio-1.0
  hs-source-dirs: test
  ghc-options: -Wall -rtsopts -fprof-auto
  main-is: tasty-test.hs
  default-language:    Haskell2010

